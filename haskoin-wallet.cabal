    main-is:           hw.hs
    other-modules:     Haskoin.Wallet,
                       Haskoin.Wallet.Keys,
                       Haskoin.Wallet.Manager,
                       Haskoin.Wallet.TxBuilder
    build-depends:     base == 4.6.*, 
                       binary == 0.7.*, 
                       bytestring == 0.10.*, 
                       mtl == 2.1.*,
                       unix == 2.6.*,
                       haskoin-util == 0.1.*, 
                       haskoin-crypto == 0.1.*, 
                       haskoin-protocol == 0.1.*,
                       haskoin-script == 0.1.*
    hs-source-dirs:    bin, src
    ghc-options:       -O2

