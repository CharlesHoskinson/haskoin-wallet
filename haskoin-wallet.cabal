version:               0.1.1.0
synopsis:              Implementation of a Bitcoin hierarchical deterministric wallet (BIP32) in Haskell
-- description:         
homepage:              http://github.com/plaprade/haskoin-wallet
license:               PublicDomain
license-file:          UNLICENSE
author:                Philippe Laprade
maintainer:            plaprade@gmail.com
category:              Bitcoin
build-type:            Simple
cabal-version:         >= 1.9.2

library
    exposed-modules:   Haskoin.Wallet,
                       Haskoin.Wallet.Arbitrary
    other-modules:     Haskoin.Wallet.Keys,
                       Haskoin.Wallet.Manager,
                       Haskoin.Wallet.TxBuilder
    build-depends:     base == 4.6.*, 
                       binary == 0.7.*, 
                       bytestring == 0.10.*, 
                       mtl == 2.1.*,
